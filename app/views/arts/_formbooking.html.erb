

<h2 class="paragraph-title">Book <%= @art.title %></h2>

<%# form (simple_form): #invisible form activated with button (JS)
  calendar with:
    input start_date
    input end_date
  validations (must have input dates, must be logged in)
  send button => validation modals %>

      <%= simple_form_for([@art, @booking]) do |f| %>
        <div class=".datepicker()">
        <%= f.input :start_date,
                    label: "Booking dates",
                    as: :string,
                    input_html: { data: {
                      controller: "datepicker" ,
                      datepicker_value: @art.price
                        }
                      }
                    %>


        </div>
          <%# <div class ="btn btn-primary w-100"> %>
            <%= f.submit "Book", class: "btn btn-primary w-100" %>
          <%# </div> %>


      <% end %>
