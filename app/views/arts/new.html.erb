<div class="container">
  <div class="row justify-content-center">
    <div class="col-5 mb-3 border border-1 p-5 bg-light shadow">
      <h2 class="text-center">New Art</h2>
      <br>
      <%= simple_form_for [@art] do |f| %>
        <%= f.input :name, label: 'Artist name' %>
        <%= f.input :title, label: 'Art piece name' %>
        <%= f.input :category, hint: 'Abstract, modern...' %>
        <%= f.input :creation_date, label: 'Art creation date' %>
        <%= f.input :price, as: :integer, label: 'Renting price per day' %>
        <%= f.button :submit, class: "btn btn-primary w-100" %>
      <% end %>
    </div>
    <div class="text-center">
        <%= link_to "All movies list", arts_path %>
    </div>
  </div>
</div>
