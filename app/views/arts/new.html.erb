<div class="container">
  <h1>New Art view</h1>
  <%= simple_form_for [@art] do |f| %>
    <%= f.input :name, label: 'Artist name' %>
    <%= f.input :title, label: 'Art piece name' %>
    <%= f.input :category, hint: 'Abstract, modern...' %>
    <%= f.input :creation_date, label: 'Art creation date' %>
    <%= f.input :price, as: :integer, label: 'Renting price per day' %>
    <%= f.button :submit, class: "btn btn-primary text-white" %>
    <%= link_to "All movies list", arts_path, class: "btn btn-primary text-white" %>
  <% end %>
</div>