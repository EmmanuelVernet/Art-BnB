<div class="container">
  <% @bookings.each do |booking| %>
    <div class="card-product">
      <%= cl_image_tag booking.art.photo.key %>
      <div class="card-product-infos">
        <h3 class="card-title">Art piece: <%= booking.art.title %></h3>
        <p><strong>Booking start date:</strong> <%= booking.start_date.strftime('%d/%m/%Y') %></p>
        <p><strong>Booking end date:</strong> <%= booking.end_date.strftime('%d/%m/%Y') %></p>
        <p><strong>Booking price per day:</strong> <%= number_to_currency(booking.art.price) %></p>
        <p><strong>Total price:</strong> <%= number_to_currency((booking.end_date - booking.start_date).round * booking.art.price) %></p>
        <div class="card-actions">
          <%= link_to "See art details", art_path(booking.art_id), class: "btn btn-link" %>
          <%= link_to "See booking details", art_booking_path(booking.art_id, booking), class: "btn btn-link" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
