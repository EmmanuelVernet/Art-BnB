
 <div class="card-product"> <!-- Flexbox for card layout -->

      <div>
        <%= cl_image_tag booking.art.photo.key, crop: :fill, gravity: :face %>
      </div>

      <div class="card-product-infos d-flex flex-column justify-content-start align-self-center"> <!-- Flexbox for centering content -->
        <h3 class="card-title paragraph-title">Art piece: <%= booking.art.title %></h3>
        <p><strong>Booking start date:</strong> <%= booking.start_date.strftime('%d/%m/%Y') %></p>
        <p><strong>Booking end date:</strong> <%= booking.end_date.strftime('%d/%m/%Y') %></p>
        <p><strong>Total price:</strong> <%= number_to_currency((booking.end_date - booking.start_date).round * booking.art.price) %></p>
        <p><strong>status:</strong> <%= booking.status %></p>
      </div>

        <div class="card-actions d-flex flex-column justify-content-start align-self-center">
        <%= link_to "Validate", accept_art_booking_path(art, booking), data: {turbo_method: :patch, turbo_confirm: "Are you sure?"}, class: "btn btn-outline-secondary mb-3" %>
        <%= link_to "Decline", decline_art_booking_path(art, booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-outline-secondary" %>

        </div>

    </div>
