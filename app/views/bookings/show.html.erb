<div class="container">
  <div class="col-sm-8 offset-sm-2">
    <h1>Show booking</h1>
      <h2>Start date: <%= @booking.start_date.strftime('%d/%m/%Y') %></h2>
      <h2>End date: <%= @booking.end_date.strftime('%d/%m/%Y') %></h2>
      <h2>Artist: <%= @art.name %></h2>
        <h3>Title: <%= @art.title %></h3>
          <p>Category: <%= @art.category %></p>
          <p>Creation date: <%= @art.creation_date.strftime('%d/%m/%Y') %></p>
          <p>Renting price per day: <%= number_to_currency(@art.price) %></p>
          <p>Total price: <%= number_to_currency((@booking.end_date - @booking.start_date).round*(@booking.art.price)) %></p>
          <%= link_to "Edit booking", edit_art_booking_path, class: "btn btn-primary text-white" %>
          <%= link_to "All bookings", art_bookings_path, class: "btn btn-primary text-white" %>
  </div>
</div>
